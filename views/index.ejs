<%- include('layout/header')%>
<div class="container" style="margin-top: 5%">
  <% if(message){ %>
  <div
    class="alert alert-dismissible fade show alert-<%= message.type %>"
    role="alert"
  >
    <button
      class="btn-close"
      type="button"
      data-bs-dismiss="alert"
      aria-label="close"
    ></button>
    <strong><%= message.message %></strong>
  </div>
  <% } %> <% if(users!=''){ %>
  <table class="table my-3">
    <thead>
      <tr class="table-dark">
        <th scope="col">ID</th>
        <th scope="col">Image</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Category</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody class="table-group-divider">
      <% users.forEach((row,index)=>{ %>
      <tr class="align-middle">
        <td><%= index %></td>
        <td>
          <img src="<%= row.image %>" width="50" class="img-thumbnail" alt="" />
        </td>
        <td><%= row.name %></td>
        <td><%= row.email %></td>
        <td><%= row.phone %></td>
        <td><%= row.category %></td>
        <td>
          <a href="/edit/<%= row._id %>" class="text-success"
            ><i class="fas fa-edit fa-lg mx-1"></i
          ></a>
          <a href="/delete/<%= row._id %>" class="text-danger"
            ><i class="fas fa-trash fa-lg mx-1"></i
          ></a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <% }else{ %>
  <h3 class="text-center text-secondary mt-5">No User Found!!!</h3>
  <% } %>
</div>
<%- include('layout/footer')%>
